<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docente.CrearAgenda">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/titDiaAgenda"
            android:layout_width="match_parent"
            android:background="@drawable/borde_cuadrado"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Dia"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>

            <Spinner
                android:id="@+id/spnDiaAgenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLASE"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/borde_cuadrado"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHoraInicioClase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Hora fin"
                android:hint="Hora inicio"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txtHoraFinClase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Hora fin"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Hora fin"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="ASESORIA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borde_cuadrado"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHoraInicioAsesoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Hora fin"
                android:hint="Hora inicio"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txtHoraFinAsesoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Hora fin"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                 />
        </LinearLayout>

        <Button
            android:id="@+id/btnCrearAgenda"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_boton"
            android:layout_height="wrap_content"
            android:text="Crear agenda" />
    </LinearLayout>

</FrameLayout>