<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_control.ModificarEstudiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtCodigoEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Codigo estudiante"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtCedulaEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cedula estudiante"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtNombreEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre estudiante"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtFechaEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Fecha nacimiento"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtEstadoEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Estado estudiante"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Direccion estudiante"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Telefono estudiante"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Correo electronica"
                    android:inputType="textPersonName"
                    android:text="" />

                <Spinner
                    android:id="@+id/spnFacultad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spnPrograma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spnSemestre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="buscar" />

                <Button
                    android:id="@+id/btnModificar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar" />

                <Button
                    android:id="@+id/btnInactivar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inactivar" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>